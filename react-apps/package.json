{
  "name": "labs-monorepo",
  "version": "0.1.0",
  "description": "Labs Monorepo",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:libs": "lerna run libbuild",
    "build:apps": "yarn build:libs && lerna run build",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "move-auth": "rm -r ../front-bucket/public/auth && cp -r ./packages/apps/auth/build ../front-bucket/public/auth",
    "move-experimento-a": "rm -r ../front-bucket/public/experiments/experimento-a && cp -r ./packages/apps/experimento-a/build ../front-bucket/public/experiments/experimento-a",
    "move-experimento-b": "rm -r ../front-bucket/public/experiments/experimento-b && cp -r ./packages/apps/experimento-b/build ../front-bucket/public/experiments/experimento-b",
    "move-all": "npm run move-auth && npm run move-experimento-a && npm run move-experimento-b",
    "build:move": "npm run build:apps && npm run move-all"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "sw-precache": "^5.2.1",
    "workbox-cli": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "npm run format",
      "git add"
    ]
  }
}
